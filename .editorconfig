# 为分析器项目禁用警告
# https://docs.microsoft.com/visualstudio/code-quality/use-roslyn-analyzers

# 顶级EditorConfig文件
root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# 禁用所有分析器
[*.{cs,csx,vb,vbx}]
dotnet_analyzer_diagnostic.severity = none

# 禁用所有类别的警告
dotnet_diagnostic.category-Style.severity = none
dotnet_diagnostic.category-Performance.severity = none
dotnet_diagnostic.category-Design.severity = none
dotnet_diagnostic.category-Naming.severity = none
dotnet_diagnostic.category-Reliability.severity = none
dotnet_diagnostic.category-Security.severity = none
dotnet_diagnostic.category-Usage.severity = none

# 禁用所有特定规则
dotnet_diagnostic.CS8625.severity = none # 无法将 null 字面量转换为非 null 的引用类型
dotnet_diagnostic.CS8604.severity = none # 可能的 null 引用参数
dotnet_diagnostic.CS8602.severity = none # 可能的 null 引用解引用
dotnet_diagnostic.CS0618.severity = none # 已过时
dotnet_diagnostic.CS8631.severity = none # null 类型与约束不匹配
dotnet_diagnostic.CS0712.severity = none # 无法创建静态类实例
dotnet_diagnostic.CS0723.severity = none # 无法声明静态类型变量
dotnet_diagnostic.CS1503.severity = none # 参数类型不匹配
dotnet_diagnostic.CA1051.severity = none # 不要声明可见实例字段
dotnet_diagnostic.CA1721.severity = none # 属性名称造成混淆
dotnet_diagnostic.CA1062.severity = none # 在外部可见方法中验证参数
dotnet_diagnostic.CA1310.severity = none # 字符串操作可能因区域设置而异
dotnet_diagnostic.CA1304.severity = none # 指定CultureInfo
dotnet_diagnostic.RS1033.severity = none # 诊断说明格式问题
dotnet_diagnostic.RS2008.severity = none # 启用分析器发布跟踪
dotnet_diagnostic.RS0016.severity = none # 添加公共API分析
dotnet_diagnostic.VSTHRD200.severity = none # 使用"Async"后缀命名异步方法

# C# 特定设置
[*.cs]
# 不需要'var'
csharp_style_var_for_built_in_types = false:none
csharp_style_var_when_type_is_apparent = false:none
csharp_style_var_elsewhere = false:none

# 表达式主体成员
csharp_style_expression_bodied_methods = false:none
csharp_style_expression_bodied_constructors = false:none
csharp_style_expression_bodied_operators = false:none
csharp_style_expression_bodied_properties = false:none
csharp_style_expression_bodied_indexers = false:none
csharp_style_expression_bodied_accessors = false:none

# 模式匹配
csharp_style_pattern_matching_over_is_with_cast_check = false:none
csharp_style_pattern_matching_over_as_with_null_check = false:none

# Null检查
csharp_style_throw_expression = false:none
csharp_style_conditional_delegate_call = false:none

# 括号首选项
csharp_prefer_braces = true:none

# 禁用可空引用类型警告
[*.{cs,vb}]
dotnet_diagnostic.CS8600.severity = none # 将null字面量或可能为null的值转换为非null类型
dotnet_diagnostic.CS8601.severity = none # 可能的null引用赋值
dotnet_diagnostic.CS8602.severity = none # 解引用可能出现空引用
dotnet_diagnostic.CS8603.severity = none # 可能的null引用返回
dotnet_diagnostic.CS8604.severity = none # 可能的null引用参数
dotnet_diagnostic.CS8618.severity = none # 在退出构造函数时，不可为 null 的字段必须包含非 null 值
dotnet_diagnostic.CS8625.severity = none # 无法将null字面量转换为非null的引用类型 